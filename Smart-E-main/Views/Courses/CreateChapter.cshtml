@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization
@model Smart_E.Models.Courses.ChapterViewModel

@{
    ViewData["Title"] = "Create Chapter";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<body>
<div class="container-fluid"  style="background-color: #2f3d54; color: white">
    <div class="row">
        <div class="col-md-4">

            <h2>Create New Chapter</h2>
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <form asp-action="CreateChapter" method="post">

                <div class="form-group">
                    <label  asp-for="ChapterName">Chapter name</label>
                    <input  asp-for="ChapterName" class="form-control" />
                </div>
      
                <div class="form-group">
                    <label asp-for="Id">Choose Course</label>
                    <select asp-for="Id" class="form-control">
                        <option value="0">select a Course</option>
                        @foreach (var s in ViewBag.Course)
                        {
                            <option value="@s.Id">@s.CourseName @s.Grade</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Date">Date</label>
                    <input asp-for="Date" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description"  class="form-control" />
                </div>
                <button type="submit" class="btn btn-sm btn-success" >@ViewBag.Action</button>
                <input type="button" value="Cancel" onclick="    javascript: backToMyCourses();">
            </form>
        </div>
    
    </div>
</div>
</body>
</html>


<script>
    function backToMyCourses(){
        
     window.location.href = '@Url.Action("AllMySubjects","Courses")';

    
    }

</script>