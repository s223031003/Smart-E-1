@model Smart_E.Models.Subject
<form method="post" asp-action="Assign">
    <div class="border p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Assign Teacher to Subject</h2>
        </div>
        <div class="row">
            <div class="col-20">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="SubjectName">Subject Name</label>
                    </div>
                    <div class="col-6">
                        <select asp-for="SubjId" asp-items="@(new SelectList(ViewBag.message,"SubjId","SubjectName"))"></select>
                    </div>
                    <div class="col-6">
                        <label asp-for="SubjectName">Teacher Name</label>
                    </div>
                  



                    <br />                
                </div>

                <div class="form-group row">
                    <div class="col-12 offset-2 row position-static">
                        <div class="col">
                            <input type="submit" class="btn btn-outline-info w-75" value="Assign" />
                        </div>
                        <div class="col">
                            <a asp-action="GetTeachers" class="btn btn-outline-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
