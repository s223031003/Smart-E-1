@model IEnumerable<Smart_E.Models.EnrollmentReport>

    
<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Yearly Intake Report</h2>
            <br/>
            <h3>For the Year: <b>2022</b></h3>
        </div>
        <div class="col-6 text-right">
           @* <a asp-controller="HOD" asp-action="CreateSubject" class="btn btn-outline-primary">Add new Subject</a>*@
        </div>
    </div>

    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-success table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Grade</th>
                    <th>Total Teachers</th>
                    <th>Total Students</th>
                    <th>Available Teachers</th>
                    <th>Available Students</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var report in Model)
                {
                    <tr>
                        <td width="30%">@report.Grades</td>
                        <td width="30%">@report.TotalTeachers</td>
                        <td width="30%">@report.TotalStudents</td>
                        <td>20</td>
                        <td>100</td>
                    </tr>
                }
            </tbody>




        </table>



    }
    else
    {
        <p></p>
    }
    </div>
